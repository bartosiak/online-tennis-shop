module.exports = (req, res, next) => {
    if (!req.user) {
        return res.status(401).json({ message: "Musisz się zalogować." });
    }

    if (req.user.role !== "admin") {
        return res
            .status(403)
            .json({ message: "Nie masz uprawnień do tej operacji." });
    }
    next();
};
